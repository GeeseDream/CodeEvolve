{
    "name": "CodeEvolve",
    "image": "pytorch/pytorch:2.2.1-cuda12.1-cudnn8-runtime",
    "runArgs": [
        "--gpus=all"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",
                "donjayamanne.python-extension-pack"
            ]
        }
    },
    "postCreateCommand":"pip config set global.index-url https://mirror.baidu.com/pypi/simple && pip install -U ipykernel",
    "mounts": [
        {
            "source": "D:/huggingface/",
            "target": "/root/.cache/huggingface",
            "type": "bind"
        }
    ]
}